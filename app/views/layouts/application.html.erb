<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <div class="wrapper">
    <div class="ui fixed inverted menu">
      <div class="ui container">
        <a href="/" class="item">
          <%= image_tag "acebook_logo.png", class: "logo", id: "home" %>
          <span>Acebook</span>
        </a>
        <div class="right item">
          <% if !current_user %>
            <%= link_to "Log in", "/sessions/new", class: "item" %>
            <%= link_to "Sign up", "/users/new", class: "item" %>
          <% elsif current_user %>
            <%= link_to "Welcome #{current_user.first_name}!", "/#{current_user.id}", class: "item" %>
            <%= link_to 'Log out', "/sessions/null", method: :delete, class: "item" %>
          <% end %>
        </div>
      </div>
    </div>

  <div class="ui main text container">
    <%= content_tag(:div, nil, id: "konami") %>
    <%= yield %>
  </div>

  <%= content_tag(:div, nil, class: "footer_whitespace") %>

    <div class="ui inverted vertical footer segment">
      <div class="ui center aligned container">
        <div class="ui stackable inverted divided grid">
          <div class="six wide column">
            <%= content_tag(:h4, "Here are the Creators", class: ["ui" "inverted" "header"]) %>
            <div class="ui inverted link list">
              <%= content_tag(:span, "You can check us out on GitHub") %>
            </div>
          </div>
          <div class="two wide column">
            <%= content_tag(:h4, "Alastair Gilles", class: ["ui" "inverted" "header"]) %>
            <div class="ui inverted link list">
              <%= link_to "GitHub", "https://github.com/ffgi-es", class: "item" %>
            </div>
          </div>
          <div class="two wide column">
            <%= content_tag(:h4, "Hisham Bokhari", class: ["ui" "inverted" "header"]) %>
            <div class="ui inverted link list">
              <%= link_to "GitHub", "https://github.com/hishambokhari", class: "item" %>
            </div>
          </div>
          <div class="two wide column">
            <%= content_tag(:h4, "Jonathan Palma", class: ["ui" "inverted" "header"]) %>
            <div class="ui inverted link list">
              <%= link_to "GitHub", "https://github.com/JonathanPalma-code", class: "item" %>
            </div>
          </div>
          <div class="two wide column">
            <%= content_tag(:h4, "Kealan Heena", class: ["ui" "inverted" "header"]) %>
            <div class="ui inverted link list">
              <%= link_to "GitHub", "https://github.com/kealanheena", class: "item" %>
            </div>
          </div>
          <div class="two wide column">
            <%= content_tag(:h4, "Sam Folorunsho", class: ["ui" "inverted" "header"]) %>
            <div class="ui inverted link list">
              <%= link_to "GitHub", "https://github.com/samfolo", class: "item" %>
            </div>
          </div>
        </div>
        
        <%= content_tag(:div, nil, class: ["ui", "inverted", "section", "divider"]) %>
        <%= image_tag "acebook_logo.png", class: "ui centered mini image" %>

        <div class="ui horizontal inverted small divided link list">
          <%= link_to "Terms and Conditions", "#", class: "item" %>
          <%= link_to "Privacy Policy", "#", class: "item" %>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>


